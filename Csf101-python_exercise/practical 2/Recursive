def fib(n):       # build a function
    if n <= 0:              # since there is 2  condition for fibbonacci sqquence there is use of control flow statement 
        return 0                # the 0th fib no is 0 so,and the next fib no is 1 therefore 
    elif n == 1:      #base case
        return 1   
    else:                       #since there is none of the preceding conditions apply
       return (fib( n - 1 )) + (fib( n - 2 ))
n = 6
print(f"The {n}th fibonacci number is: {fib(n)}")
